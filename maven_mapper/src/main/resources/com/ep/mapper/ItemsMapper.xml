<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ep.mapper.ItemsMapper">
    <select id="findById" parameterType="int" resultType="com.ep.domain.Items">
        select * from items where id = #{id}
    </select>
</mapper>